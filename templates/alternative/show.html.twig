{% extends '_base.html.twig' %}

{% block title %}{{ alternative.name }}{% endblock %}

{% block main %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col">
                <div class="mb-3 text-center">
                    <h1 class="fw-bold text-uppercase text-primary">
                        {{ alternative.name }}
                    </h1>
                </div>
            </div>
        </div>

        <div class="row justify-content-center mt-4 mt-md-5">
            <div class="col-12 col-md-4 col-lg-5">
                <div class="text-center">
                    <twig:UploadedImage file="{{ alternative.picture }}" width="600" height="600" alt="{{ alternative.name }}" class="img-fluid" />
                </div>
            </div>

            <div class="col-12 col-md-8 col-lg-7">
                <div class="text-center mb-3 mt-4 mt-md-0">
                    <h2 class="text-body-secondary">Description</h2>
                </div>

                <div class="bg-white p-3 rounded border border-secondary-outline">
                    {{ alternative.description|raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
