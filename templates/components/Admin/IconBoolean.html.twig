{% if value %}
    <i
        class="fa-solid fa-circle-check fa-fw text-success"
        {% if tooltip is defined or tooltipTrue is defined %}
            data-bs-toggle="tooltip"
            title="{{ tooltipTrue|default(tooltip|default('')) }}"
        {% endif %}
    ></i>
{% else %}
    <i
        class="fa-solid fa-circle-xmark fa-fw text-danger"
        {% if tooltip is defined or tooltipFalse is defined %}
            data-bs-toggle="tooltip"
            title="{{ tooltipFalse|default(tooltip|default('')) }}"
        {% endif %}
    ></i>
{% endif %}
