{% if value %}
    <i
        class="fa-solid fa-circle-check fa-fw text-success"
        {% if tooltip is defined or tooltip_true is defined %}
            date-bs-toggle="tooltip"
            title="{{ tooltip_true|default(tooltip) }}"
        {% endif %}
    ></i>
{% else %}
    <i
        class="fa-solid fa-circle-xmark fa-fw text-danger"
        {% if tooltip is defined or tooltip_false is defined %}
            date-bs-toggle="tooltip"
            title="{{ tooltip_false|default(tooltip) }}"
        {% endif %}
    ></i>
{% endif %}
