{% extends '_base.html.twig' %}

{% block title %}Réinitialisation de ton mot de passe{% endblock %}

{% block main %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="row text-center mb-3">
                    <h1 class="fw-bold text-uppercase text-primary">Mise à jour de ton mot de passe</h1>
                </div>

                {{ form_start(resetForm) }}
                    {{ form_row(resetForm.plainPassword) }}

                    <button class="w-100 btn btn-lg btn-primary" type="submit">Mettre à jour mon mot de passe</button>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
{% endblock %}
