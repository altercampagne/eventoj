                        >
                          <div style="padding:0px 0px 0px 0px">
                            <div
                              style="text-align:left;padding:0px 0px 0px 0px"
                            >
                              <img
                                alt="{{ event.name }}"
                                src="{{ event.imageUrl }}"
                                height="64"
                                width="64"
