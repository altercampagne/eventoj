{% apply inky_to_html|inline_css(source('@styles/foundation-emails.css'))|inline_css %}
    <style>
        body, html, .body {
            background: #f3f3f3 !important;
        }

        .container.header, .container.footer {
            background: #f3f3f3;
        }
    </style>

    <spacer size="16"></spacer>

    <container class="header">
        <row>
            <columns>
                <h1 class="text-center">Bienvenue à toi {{ user.name }} !</h1>
            </columns>
        </row>
    </container>

    <container>
        <row>
            <columns>

                <spacer size="32"></spacer>

                <h4>Dernier étape avant de pouvoir réserver ta place : confirmer ton adresse email.</h4>

                <spacer size="32"></spacer>

                <button class="large expand" href="{{ signedUrl|raw }}">Confirmer mon adresse mail.</button>

                <p class="text-center small">Le lien expire dans {{ expiresAtMessageKey|trans(expiresAtMessageData, 'VerifyEmailBundle') }}.</p>
            </columns>
        </row>

        <spacer size="16"></spacer>
    </container>

    <container class="header">
        <row>
            <columns>
                <center>
                    <menu>
                        <item href="https://www.altercampagne.net/">Site web</item>
                        <item href="{{ url('homepage') }}">Réservation</item>
                    </menu>
                </center>
            </columns>
        </row>
    </container>
{% endapply %}
